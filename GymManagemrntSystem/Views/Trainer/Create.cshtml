@using GymManagementSystemBLL.ViewModels.Trainer
@using GymManagementSystemDAL.Model.Enums

@model CreateTrainerModel
<div class="container mt-4">
      @Html.ValidationMessage("IvaildData",new {@class="text-danger"})
                <header class="mb-4">
                    <h3 class="text-primary-color">Add New Trainer</h3>
                </header>

                <form  asp-action="CreateTrainer" asp-controller="Trainer" method="post">

                    <!-- Trainer Info -->
                    <div class="section-header mb-3">
                        <h5 class="text-primary fw-bold">Personal Information</h5>
                        <hr class="mt-2">
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" type="text" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="text" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                                  <label asp-for="Phone"></label>
                            <input asp-for="Phone" type="text" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                                    <label asp-for="DateOfBirth"></label>
                            <input asp-for="DateOfBirth" type="Date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Gender"></label>
                           <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                                    <option value="">--- Select item --- </option>
                                </select>
                        </div>

                    </div>
                    <div class="section-header mb-3 mt-4">
                        <h5 class="text-primary fw-bold">Address Information</h5>
                        <hr class="mt-2">
                    </div>
                    <div class="row g-3">

                        <div class="col-12 col-md-6">
                               <label asp-for="BuildingNumber"></label>
                            <input asp-for="BuildingNumber" type="text" class="form-control" />
                            <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                                  <label asp-for="Street"></label>
                            <input asp-for="Street" type="text" class="form-control" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                            <label asp-for="City"></label>
                            <input asp-for="City" type="text" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>                     
                    </div>
                    <!-- Professional Information -->
                    <div class="section-header mb-3">
                        <h5 class="text-primary fw-bold">Professional Information</h5>
                        <hr class="mt-2">
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-semibold">
                                Specializations <span class="text-danger">*</span>
                            </label>
              
                           <select asp-for="Specialization" asp-items="Html.GetEnumSelectList<Specialties>()" class="form-select">
                                    <option value="">--- Select item --- </option>
                                </select>
                          
                        </div>
                    </div>

                    <footer class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-fill">Add</button>
                    </footer>
                </form>

            </div>